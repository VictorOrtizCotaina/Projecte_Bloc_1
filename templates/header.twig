<header>
    <nav class="navbar navbar-default navbar-fixed-top navbar-fix" id="header-nav" role="navigation">
        <div class="container-fluid">

            <div id="search-menu">
                <a class="navbar-brand" href="{{ router.generateURL('Category', 'index') }}">{% trans "Foro Programacion" %}</a>

                {% if not session.user %}
                    <a class="btn navbar-form navbar-left ng-pristine ng-valid"
                       href="{{ router.generateURL('User', 'login') }}">
                        <i class="fa fa-user"></i>
                        {% trans "Iniciar Sesión" %}
                    </a>
                    <a class="btn navbar-form navbar-left ng-pristine ng-valid"
                       href="{{ router.generateURL('User', 'register') }}">
                        <i class="fa fa-user-plus"></i>
                        {% trans "Registro" %}
                    </a>
                {% endif %}

                {% if session.user %}
                    <a class="navbar-form navbar-left ng-pristine ng-valid"
                       href="{{ router.generateURL('User', 'getUser') }}">
                        {{ user.username }}
                    </a>

                    {% if session.user %}
                        <a class="navbar-form navbar-left ng-pristine ng-valid"
                           href="{{ router.generateURL('Category', 'getAdminCategory') }}">
                            Back-Office
                        </a>
                    {% endif %}

                    <a class="btn navbar-form navbar-left ng-pristine ng-valid" href="{{ router.generateURL('User', 'logout') }}">
                        <i class="fas fa-power-off"></i>
                    </a>
                {% endif %}

                {% for categoryNavbar in categoriesNavbar %}
                    <div class="btn-group">
                        <div class="btn-group dropright">
                            <a type="button" class="btn btn-secondary"
                               href="{{ router.generateURL('Category', 'getCategory', {id_category: categoryNavbar.idCategory}) }}">
                                {{ categoryNavbar.title }}
                            </a>
                            <button type="button" class="btn btn-secondary dropdown-toggle dropdown-toggle-split"
                                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="sr-only">Toggle Dropright</span>
                            </button>
                            <ul class="dropdown-menu">
                                {% for forumNavbar in categoryNavbar.forums %}
                                    <li><a href="{{ router.generateURL('Forum', 'getForum', {id_category: categoryNavbar.idCategory, forumNavbar: forum.idForum}) }}">
                                            {{ forumNavbar.title }}
                                        </a></li>
                                    <li class="divider"></li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                {% endfor %}

                <div class="btn-group dropright">
                    <button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        {% trans "Idioma" %}
                    </button>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="{{ router.generateURL('Language', 'changeLanguage', {}, {"lang":"es", "url":url}) }}">Español</a>
                        <a class="dropdown-item" href="{{ router.generateURL('Language', 'changeLanguage', {}, {"lang":"ca", "url":url}) }}">Catalan</a>
                        <a class="dropdown-item" href="{{ router.generateURL('Language', 'changeLanguage', {}, {"lang":"en", "url":url}) }}">Ingles</a>
                    </div>
                </div>

            </div>

        </div>
    </nav>

    <div class="jumbotron no-margin-bottom no-padding-bottom">
        <div class="container text-center">
            <div id="site-logo"><a href="{{ router.generateURL('Category', 'index') }}"
                                   title="Board index"><h2>Foro Programacion</h2></a></div>

        </div>
    </div>
</header>